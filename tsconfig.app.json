{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",

    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,

    "skipLibCheck": true,
    "noUnusedLocals": false,     
    "noUnusedParameters": false,  

    "resolveJsonModule": true,   
    "isolatedModules": true,      
    "types": ["vite/client"]      
  },
  "include": ["src"]
}
